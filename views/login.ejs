<% include ./partials/events_header.ejs %>

<% include ./partials/navbar.ejs %>

<div class="col-sm-6 col-sm-offset-3">
    <h1>Login</h1>

    <% if(message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-info btn-lg">Login</button>
    </form>

    <hr>

    <div style="position: relative; bottom: 86px; left: 105px;" class="login-with">
      <h4>Or Login With <a href="/auth/facebook" class="btn btn-primary btn-lg">Facebook</a></h4>
    </div>

    <div style="position:absolute; float:left; bottom:2px;"><p>Or, <a href="/signup">Signup</a></p>
    <p>Go back <a href="/">home</a>.</p>
  </div>

</div>
